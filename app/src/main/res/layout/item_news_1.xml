<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_item01_iv"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="#11000000"/>
    <TextView
        android:id="@+id/id_item01_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题"
        android:maxLines="2"
        android:layout_toRightOf="@+id/id_item01_iv"
        android:layout_alignParentTop="true"
        android:textSize="16sp"
        android:textColor="@color/item_text_01"/>
    <TextView
        android:id="@+id/id_item01_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来源"
        android:layout_alignBottom="@+id/id_item01_iv"
        android:layout_alignLeft="@+id/id_item01_tv_title"
        android:textColor="@color/item_text_02"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/id_item01_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120跟帖"
        android:layout_alignBottom="@+id/id_item01_iv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="@color/item_text_02"
        android:textSize="12sp"/>
</RelativeLayout>